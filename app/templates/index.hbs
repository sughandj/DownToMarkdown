<nav class="navbar navbar-expand-sm navbar-dark bg-primary p-3 d-block">
  <a class="navbar-brand mr-auto d-inline-block" href="#">DownToMarkdown</a>

  <div class="container d-inline-block w-auto float-right">
    <div class="form-group d-inline-block mt-2 mb-2 ml-4">
      <div class="custom-control custom-switch">
        {{input checked=liveRender type="checkbox" class="custom-control-input" id="liveRenderToggle"}}
        <label class="custom-control-label" for="liveRenderToggle">Live</label>
      </div>
    </div>
    
    {{#unless liveRender}}
      <button class="btn btn-secondary ml-4" onclick={{action "updateLivePlainText"}}>Render</button>
    {{/unless}}
  </div>
</nav>

<div class="container-fluid d-flex flex-grow-1">
  <div class="row d-flex flex-grow-1">
    <div class="col-sm d-flex flex-grow-1 p-0">
      <div class="card d-flex flex-grow-1 border-secondary m-3">
        <div class="card-header">Plain Text</div>
        <div class="card-body d-flex flex-grow-1 p-0">
          {{textarea class="d-flex flex-grow-1 p-3" value=plainText}}
        </div>
      </div>
    </div>
    
    <div class="col-sm d-flex flex-grow-1 p-0">
      <div class="card flex-grow-1 border-secondary m-3">
        <div class="card-header">Markdown</div>
        <div class="card-body scroll-y">
          <p class="card-text">
            {{markdown-html livePlainText options=markdownOptions}}
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
